<div class="big-container manage-products-wrapper">
  <h3 class="manage-products-title">Manage your Sneakers catalog</h3>
  <table class="product-manage-table">
    <thead>
      <tr class="table-row">
        <th colspan="1" class="table-head">Sneaker Image</th>
        <th colspan="1" class="table-head">Sneaker Name</th>
        <th colspan="1" class="table-head">Sneaker Ref</th>
        <th colspan="1" class="table-head">Sneaker Prixe</th>
        <th colspan="1" class="table-head"> </a> Edit</th>
        <th colspan="1" class="table-head">Delete</th>
      </tr>

    </thead>
    <tbody>
      {{#each products}}
      <tr class="table-row">
        <td class="table-division">
          <div><img src="{{this.img}}" alt="img" class="table-image" /></div>
        </td>
        <td class="table-division">
          <div>{{this.name}}</div>
        </td>
        <td class="table-division">
          <div>${{this.price}}</div>
        </td>
        <td class="table-division">
          <div>{{this.ref}}</div>
        </td>
        <td class="table-division"><a href="/product-edit/{{this._id}}" class="fa fa-edit table-icon"></a>
        <td class="table-division"><a href="/delete/{{this._id}} " class="fa fa-trash table-icon"
            aria-hidden="true"></a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>