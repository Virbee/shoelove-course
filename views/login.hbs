<div>{{#if errorMessage}}
  <div class="error-message">{{ errorMessage }}</div>
  {{/if}}</div>
<div class="sign form-container">
  <div class="form-header">
    <h1 class="form-title">Welcome Back !</h1>
    <p class="form-subtitle">Enjoy yourself and be comfortable </p>
  </div>
  <form method="post" action="/login" id="form_user">
    <div class="form-item-wrapper flexed-item">
      <label for="username" class="label-ref label">virbee</label>
      <input type="text" name="username" class="input-text input" placeholder="Al" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">1234</label>
      <input type="password" name="password" class="input-text input" placeholder="••••••" required>
    </div>
    <button type="submit" class="button-primary white">Log In</button>
  </form>
  <p class="form-sub-infos">Don't have an account yet ? <a href="/signup" class="button-link-form">Sign Up</a></p>
</div>