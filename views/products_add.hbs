<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="./prod-add" class="add-product-form">
    <h3 class="form-title">Add Sneackers to the collection</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-name" class="label-name label">Model name</label>
      <input type="text" class="input-text input" placeholder="Nike Air Max 90" name="name">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-ref" class="label-ref label">RÃ©f.</label>
      <input type="text" class="input-text input" placeholder="ex: NV23498" name="ref">
    </div>
    <fieldset class="form-item-wrapper flexed-item">
      <legend>Select sizes</legend>
      {{#each sizes}}
      <div><input type="checkbox" class="input-text input" name="sizes" id="{{this}}" value="{{this}}">
        <label for="{{this}}" class="label-ref label">{{this}}</label></div>
      {{/each }}
    </fieldset>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-descr" class="label-descr label">Description</label>
      <input type="text" class="input-text input" placeholder="The better sneakers to run" name="description">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-price" class="label-price label">Price</label>
      <input type="number" class="sneacker-price input" min="1" name="price">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-main-cat" class="label-main-cat label">Main category</label>
      <select name="category" id="main_category" class="select">
        <option value="">Choose main Category...</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label class="label">Tags</label>
      <select name="sneacker-secondary-cat" id="secondary_category" class="select">
        {{#unless tag}}<option value="">No tag yet...</option>{{/unless}}
        {{#if tag}}
        <option value="">Choose Secondary Category...</option>
        {{#each tag}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
        {{/if}}
      </select>
    </div>
    <button class="button-primary add-sneacker-btn">Add to collection</button>
  </form>

  <form id="new-tag-form" class="add-category-form">
    <h3 class="form-title">Add tags</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="category-name" class="category-name label">Sneaker tag</label>
      <input type="text" class="input" placeholder="ex: Gangsta" name="label">
    </div>
    <button class="button-primary add-category-btn">Create this category</button>
  </form>
</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/scripts/tagHandler.js"></script>